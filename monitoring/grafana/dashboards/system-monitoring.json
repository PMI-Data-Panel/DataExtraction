{
  "title": "시스템 리소스 모니터링",
  "tags": ["system", "cpu", "memory", "disk"],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "10s",
  "time": {
    "from": "now-6h",
    "to": "now"
